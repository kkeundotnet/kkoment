CREATE TABLE `comments` (
	`id`	INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT UNIQUE,
	`url`	TEXT NOT NULL,
	`thread_id`	TEXT NOT NULL,
	`name`	TEXT NOT NULL,
	`time`	TEXT NOT NULL,
	`hashed`	TEXT NOT NULL,
	`text`	TEXT NOT NULL,
	`removed`	INTEGER
);
CREATE TABLE `salts` (
	`name`	TEXT NOT NULL UNIQUE,
	`salt`	TEXT NOT NULL,
	PRIMARY KEY(name)
);
