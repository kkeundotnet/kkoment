CREATE TABLE `comments` (
	`id`	INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT UNIQUE,
	`domain_id`	TEXT NOT NULL,
	`thread_id`	TEXT NOT NULL,
	`name`	TEXT NOT NULL,
	`name_hash`	TEXT NOT NULL,
	`time`	TEXT NOT NULL,
	`text`	TEXT NOT NULL,
	`removed`	INTEGER
);
CREATE TABLE `salts` (
	`name`	TEXT NOT NULL UNIQUE,
	`salt`	TEXT NOT NULL,
	PRIMARY KEY(name)
);
